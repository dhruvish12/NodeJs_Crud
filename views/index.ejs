<%- include('layouts/header') -%>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
    <% if (message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %></strong>
        </div>
    <% } %> 
      <div class="table-responsive">
        <% if(users && users.length > 0) { %> 
          <table class="table table-striped">
                <thead>
                  <tr class="table-dark">
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                  </tr>
                  
                  <tbody>
                    <% users.forEach((row, index) => { %>
                     <tr>
                        <td><%= index + 1 %></td>
                        <td>
                          <% if (row.image) { %>
                          <img src="/uploads/<%= row.image %>" width="50px" class="img-thumbnail">
                          <% } else { %>
                            <span>No Image</span>
                          <% } %>
                        </td>
                        <td><%= row.name %></td>
                        <td><%= row.email %></td>
                        <td><%= row.phone %></td>
                        <td>
                          <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                          <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
               
          </table>
        <!-- <% } else { %> -->
            <!-- <h1 class="text-center text-secondary mt-5">No Found</h1> -->
        <!-- <% } %> -->
         
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') -%>